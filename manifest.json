{
  "manifest_version": 2,

  "name": "QNotify",
  "author": "Chris Bradley",
  "description": "Sends a desktop and Pushbullet notification when a qflow ticket is received.",
  "version": "0.2",
  
  "background": {
    "scripts": ["jquery.js","pushbullet.js","background.js"]
  },
  "options_ui": {
    "page": "setup.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "blue_q.png"
  },
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "permissions": [
    "webRequest",
    "storage",
	  "tabs",
	  "notifications",
    "http://834s-qflow-pa.its.unimelb.edu.au/"
  ]
}
